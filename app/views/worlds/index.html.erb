<p id="notice"><%= notice %></p>

<h1>Worlds</h1>

<h3>Search Worlds</h3>  
    <%= form_tag(worlds_path, method: :get) do %>
    <%= text_field_tag(:search, params[:search]) %>
    <%= submit_tag ("Search")%>
  <% end %>  

  <% @worlds.each do |world|%>
  <ul>
  <li> <%= link_to world.name, %>  </li>
  <br>
  </ul>
  <% end %>
 

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Aesthetic</th>
      <th>Inhabitants</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @worlds.each do |world| %>
      <tr>
        <td><%= world.name %></td>
        <td><%= world.description %></td>
        <td><%= world.aesthetic %></td>
        <td><%= world.inhabitants %></td>
        <td><%= link_to 'Show', world %></td>
        <td><%= link_to 'Edit', edit_world_path(world) %></td>
        <td><%= link_to 'Destroy', world, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New World', new_world_path %>
<br>
<a href="/search">Or would you rather search?</a>
